# vim: ft=yaml

CompileFlags:
  CompilationDatabase: build/
  Add:
  - -fstack-usage
  - -pedantic-errors
  - -Wconversion
  - -Wdocumentation
  - -Wdouble-promotion
  - -Wformat-pedantic
  - -Wloop-analysis
  - -Wold-style-cast
  - -Wpacked
  # - -Wpadded
  - -Wpedantic
  - -Wshadow
  - -Wsuggest-override
  - -Wthread-safety
  - -Wundef
  - -Wundefined-func-template
  - -Wundefined-reinterpret-cast
  - -Wunreachable-code-aggressive
  Remove:
  - -Werror
Index:
  Background: Build
  StandardLibrary: Yes
Style:
  FullyQualifiedNamespaces: No
Diagnostics:
  UnusedIncludes: Strict
  Suppress:
  - -Wpadded
Completion:
  AllScopes: false
InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes
Hover:
  ShowAKA: Yes
